<%- model_class = Update -%>
<div class="page-header">
  <h1><%=t '.title', :default => Update %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:progress) %></th>
      <th><%= model_class.human_attribute_name(:pains) %></th>
      <th><%= model_class.human_attribute_name(:plans) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @updates.each do |update| %>
      <tr>
        <td><%= update.id %></td>
        <td><%= update.progress %></td>
        <td><%= update.pains %></td>
        <td><%= update.plans %></td>
        <td><%=l update.created_at, format: :long %></td>
        <td>
          <%= link_to update_path(update), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to update_path(update), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_update_path,
            :class => 'btn btn-primary' %>
